{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(nix-prefetch-github:*)",
      "Bash(nix build:*)",
      "Bash(nix develop:*)",
      "Bash(nix run:*)",
      "Bash(nix flake:*)",
      "Bash(curl:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "$HOME/.claude/statusline.py"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/nix-guardian.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/nix-format.sh"
          }
        ]
      }
    ]
  }
}
